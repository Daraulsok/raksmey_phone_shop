<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="889dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            android:background="@drawable/profile_shape"
            tools:layout_editor_absoluteY="1dp"
            tools:ignore="MissingConstraints">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/variant" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="About Me"
                    android:textSize="30sp"
                    android:textColor="@color/accent"
                    />
                <View
                    android:layout_width="130dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="40dp"
                    android:background="@color/accent" />
            </RelativeLayout>
            <!--   Name    -->
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name :"
                    android:textColor="@color/accent"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="Ul Sokdara"
                    android:textColor="@color/accent"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id :"
                    android:textColor="@color/accent"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="85dp"
                    android:text="60-22-05-35"
                    android:textColor="@color/accent"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="College :"
                    android:textColor="@color/accent"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:text="COST"
                    android:textColor="@color/accent"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Major    :"
                    android:textColor="@color/accent"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:text="Information Technolgy"
                    android:textColor="@color/accent"
                    android:textSize="20dp" />
            </LinearLayout>
            <View
                android:layout_marginVertical="30dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/variant" />
            <!--        project title -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"

                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Application Purpose"
                    android:textSize="30sp"
                    android:textColor="@color/accent"
                    />
                <View
                    android:layout_width="280dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="40dp"
                    android:background="@color/accent" />
            </RelativeLayout>
            <!--   About project    -->
            <TextView
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A mobile app for a phone shop can revolutionize the customer experience and boost sales. It allows customers to browse the latest phone models and make purchases directly from their phones. The app can also offer loyalty programs, appointment scheduling for in-store service, and personalized recommendations."
                android:textSize="18sp"
                android:textColor="@color/accent"
                />
            <!--        Our Vision-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Course Purppose"
                    android:textSize="30sp"
                    android:textColor="@color/accent"
                    />
                <View
                    android:layout_width="240dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="40dp"
                    android:background="@color/accent" />
            </RelativeLayout>
            <TextView
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android Studio is a very powerful tool. Mastering Android Studio unlocks the power to create apps for billions of Android users. This opens doors to exciting careers, fuels your app development journey, and lets you shape the future of mobile experiences."
                android:textSize="18sp"
                android:textColor="@color/accent"
                />
            <Button
                android:id="@+id/buttonAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back to Home"
                android:textColor="@color/accent"
                android:padding="16dp"
                android:textSize="22dp"
                android:background="@color/textShop"/>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>